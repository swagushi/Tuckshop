@model Tuckshop.Models.Food

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <label class="from-label">Food Name</label>
            @Html.DropDownList("Food Name",
            Html.GetEnumSelectList<Foods>(),
            "Select Role",
            new {@class = "form-control"})

            <label class="from-label">Drinks</label>
            @Html.DropDownList("Drinks",
            Html.GetEnumSelectList<Drinks>(),
            "Select Role",
            new {@class = "form-control"})

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
