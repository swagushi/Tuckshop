@model Tuckshop.Models.Food

@{
    ViewData["Title"] = "Create";
}

<h1>Menu</h1>

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodName" class="control-label"></label>
                <select select asp-for="FoodName" class="form control">
                    <option value="Salad">Salad</option>
                    <option value="Hamburger">Hamburger</option>
                    <option value="Pasta">Pasta</option>
                    <option value="Sushi">Sushi</option>
                    <option value="Rice">Rice</option>
                </select>
                <span asp-validation-for="FoodName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="DrinkName" class="control-label"></label>
                <select select asp-for="DrinkName" class="form control">

                    <option value="Coke">Coke</option>
                    <option value="Pepsi">Pepsi</option>
                    <option value="Water">Water</option>
                    <option value="Orange Juice">Orange Juice</option>
                    <option value="Apple Juice">Apple Juice</option>
                </select>
                <span asp-validation-for="DrinkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
